.recommend {
  display: flex;
  text-align: center;
  margin-top: 20rpx;
  /* background: #fff; */
  color: #333;
}
.recommend_item {
  flex: 1;
  background: #fff;
  margin: 10rpx;
  border-radius: 20rpx;
}
.recommend_item_con {
  background: #fff;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.picImg {
  width: 100%;
  height: 160rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.title {
  display: block;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  font-size: 30rpx;
  margin-bottom: 10rpx;
}
