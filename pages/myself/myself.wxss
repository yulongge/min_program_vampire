.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 100px;
  border: 1px solid #5eadfc;
  padding: 10px;
  width: 100px;
  text-align: center;
  color: #5eadfc;
  border-radius: 5px;
}